# Application Settings
DEBUG=False
APP_ENV=development

# Data Directories
DATA_INPUT_DIR=data/input
DATA_OUTPUT_DIR=data/output
DATA_TEMPLATES_DIR=data/templates
DATA_BACKUP_DIR=data/backup

# Logging
LOGS_DIR=logs
LOG_FILE=logs/app.log
LOG_LEVEL=INFO

# Excel Settings
MAX_ROWS=1000000
DEFAULT_SHEET_NAME=Sheet1
EXCEL_ENGINE=openpyxl

# Backup Settings
AUTO_BACKUP=True
BACKUP_KEEP_DAYS=30

# Date/Time Format
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

